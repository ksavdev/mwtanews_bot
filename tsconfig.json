{
    "compilerOptions": {
      "target": "ESNext",          
      "module": "nodenext",          
      "outDir": "./dist",          
      "rootDir": "./src",          
      "strict": true,              
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "skipLibCheck": true       
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  